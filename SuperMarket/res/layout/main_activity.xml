<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/maintitle"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addProdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:onClick="addUser"
        android:text="@string/addprod" />

     <Button
         android:id="@+id/billProdBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/addProdBtn"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="31dp"
         android:text="Billing" />

     <Button
         android:id="@+id/delProdBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/addProdBtn"
         android:layout_below="@+id/button1"
         android:layout_marginTop="41dp"
         android:gravity="center"
         android:onClick="delUser"
         android:text="@string/delprod" />

</RelativeLayout>